<div class="row">
  <div class="card offset-3 col-6 pt-5 mt-5 mb-2 shadow-lg">
    <div class="text-center text-danger">
      <%= render "layouts/error_messages", model: @category %>
    </div>
    <%= form_with model: @category, local: true do |f| %>
      
      <div class="offset-2">
        <div><%= f.label :category_name, "カテゴリー名", class: "form-label" %></div>
        <div class="col-10"><%= f.text_field :category_name, class: "form-control border-dark" %></div>
      </div>
      
      <div class="text-center mt-4 mb-5">
        <%= f.submit "Create", class: "btn btn-outline-success col-3" %>
      </div>
      
    <% end %>
  </div>
  <div class="border mt-2 offset-1 col-10"></div>
  <div class="card mt-4 mb-5 offset-2 col-8 shadow-lg">
    <%= search_form_for @q, url: categories_path do |f| %>
      <div class="col-3 mt-3 ms-3">
        <%= f.label :category_name_cont, 'カテゴリー検索', class: "form-label" %>
      </div>
      <div class="row">
        <div class="col-4 ms-3">
          <%= f.search_field :category_name_cont, class: "form-control border-dark" %>
        </div>
        <div class="col-2">
          <%= f.submit 'Search', class: "btn btn-outline-dark mb-5" %>
        </div>
      </div>
    <% end %>

    <div>
      <%= render "categories" %>
    </div>
    <div class="offset-lg-5 offset-4 mt-4">
      <%= paginate @categories, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>