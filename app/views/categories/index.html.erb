<h4>インデックス</h4>

<div>
  <%= render "layouts/error_messages", model: @category %>
</div>
<%= form_with model: @category, local: true do |f| %>
  
  <div>
    <%= f.label :category_name, "カテゴリー名" %>
    <%= f.text_field :category_name %>
  </div>
  
  <div>
    <%= f.submit "作成" %>
  </div>
  
<% end %>

<div>
  <%= search_form_for @q, url: categories_path do |f| %>
    <%= f.label :category_name_cont, 'カテゴリー検索' %>
    <%= f.search_field :category_name_cont %>
    <%= f.submit '検索' %>
  <% end %>
  
  
  <div>
    <%= render "layouts/category_search" %>
  </div>
</div>