<div><%= @knowledge.title %></div>
<div><%= @knowledge.body %></div>
<div><%= @knowledge.url %></div>
<div><%= @knowledge.category.category_name %></div>

<div>
  <%= form_with model: @knowledge, local: true do |f| %>
    
    <div>
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title %>
    </div>
    
    <div>
      <%= f.label :body, "本文" %><br>
      <%= f.text_area :body %>
    </div>
    
    <div>
      <%= f.label :url, "URL" %><br>
      <%= f.text_area :url %>
    </div>
    
    <div>
      <%= f.label :category_id, "カテゴリー" %><br>
      <%= f.collection_select :category_id, Category.all, :id, :category_name, { prompt: '選択してください' } %>
    </div>
    
    <div>
      <%= f.submit "編集" %>
    </div>
    
  <% end %>
</div>