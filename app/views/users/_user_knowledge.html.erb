<% @user_knowledges.each do |user_knowledge| %>
  <%= link_to knowledge_path(user_knowledge.id) , class: "card offset-3 col-6 mt-2 mb-2 shadow-lg text-decoration-none btn text-start" do %>
    <div class="row">
      <div class="mt-2 ms-2 col-5 fw-bolder"><%= user_knowledge.title %></div>
      <div class="text-end col-7 fw-light text-secondary" style="font-size: 14px;"><span class="position-absolute top-0 end-0 mt-3 me-4"><%= user_knowledge.category.category_name %></span></div>
      <div class="mt-4 offset-1 mb-2 col-10 text-truncate"><%= user_knowledge.body %></div>
      <div class="text-secondary text-end mt-4"><%= user_knowledge.created_at.strftime('%Y/%m/%d %H:%M') %></div>
    </div>
  <% end %>
<% end %>