<div class="card offset-3 col-6 shadow-lg mt-5">
  <%= search_form_for @q, url: result_users_path do |f| %>
    <div class="mt-3 offset-3"><%= f.label :name_cont, '名前検索', class: "form-label" %></div>
    <div class="offset-3 col-6"><%= f.search_field :name_cont, class:"form-control border-dark" %></div>
    <div class="text-center mt-3"><%= f.submit 'Search', class: "btn btn-outline-dark btn-sm mb-3" %></div>
  <% end %>
</div>