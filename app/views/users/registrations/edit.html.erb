<div class="row">
  <div class="card offset-3 col-6 mt-5 shadow-lg">
    <h5 class="mt-3 offset-2">Edit <%= resource_name.to_s.humanize %></h5>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field offset-2 col-8 mt-2">
        <%= f.label :name, "名前", class: "form-label" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
          
      <div class="field offset-2 col-8 mt-2">
        <%= f.label :birth_date, "誕生日", class: "form-label" %><br />
        <%= f.date_select :birth_date, { use_month_numbers: true, start_year: 1960,  end_year: (Time.now.year), default: Date.new(2000, 1, 1) }, {autofocus: true, autocomplete: "birth_date", class: "form-select mb-3"} %>
      </div>
    
      <div class="field offset-2 col-8">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="actions offset-8 mt-3">
        <%= f.submit "Update", class: "btn btn-outline-success offset-2" %>
      </div>
    <% end %>
    <div class="row">
      <h5 class="offset-2 col-10">Cancel my account</h5>
      
      <div class="offset-2 col-5">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger btn-sm" %></div>
    
      <div class="col-4 mt-1 mb-3">
        <%= link_to "Back", :back, class: "text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
