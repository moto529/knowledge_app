<div class="row">
  <div class="card offset-3 col-6 shadow-lg mt-5">
    <h5 class="offset-2 mt-4 fw-bolder">Login</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field offset-2 col-8">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    
      <div class="field offset-2 col-8 mt-1">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field offset-2 mt-1 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>
    
      <div class="actions offset-8 mt-3">
        <%= f.submit "Log in", class: "btn btn-outline-success offset-2" %>
      </div>
    <% end %>
    <div class="mb-4 offset-2">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
