<div class="row">
  <div class="card offset-3 col-6 mt-5 mb-2 shadow-lg">
    <div class="row">
      <% if @user.profile_image? %>
        <div class="mt-2 col-2">
          <%= image_tag @user.profile_image.url, class: "rounded" %>
        </div>
      <% end %>
      <div class="mt-3 ms-5 col-9">
        <% if @user.introduction.nil? %>
          <div><%= @user.introduction %></div>
        <% else %>
          <div><%= safe_join(@user.introduction.split("\n"),tag(:br)) %></div>
        <% end %>
      </div>
    </div>
    <div class="mt-2">
      <span class="fw-bolder ms-3"><%= @user.name %></span>
      <% if current_user.following?(@user) %>
        <span class="mb-2 ms-2"><%= link_to "ー", user_relationship_path(@user.id), data: { turbo_method: :delete, turbo_confirm: "フォローを外しますか?" }, class: "btn btn-outline-primary btn-sm" %></span>
      <% else %>
        <span class="mb-2 ms-2"><%= link_to "＋", user_relationships_path(@user.id), data: { turbo_method: :post }, class: "btn btn-outline-primary btn-sm" %></span>
      <% end %>
    </div>
    <div class="mt-2 ms-3">Birthday : <%= @user.birth_date.strftime("%Y年%m月%d日") %></div>
    <div class="mb-3"><%= render "relationships/follow_list" %></div>
  </div>
</div>

<% @knowledges.each do |k| %>
  <%= link_to knowledge_path(k.id), class: "card offset-3 col-6 mt-5 mb-2 shadow-lg text-decoration-none btn text-start" do %>
    <div class="row">
      <div class="mt-2 ms-2 col-5 fw-bolder text-dark"><%= k.title %></div>
      <div class="text-end col-7 fw-light text-secondary" style="font-size: 14px;"><span class="position-absolute top-0 end-0 mt-3 me-4"><%= k.category.category_name %></span></div>
      <div class="mt-4 offset-1 mb-2 col-10 text-truncate text-dark"><%= k.body %></div>
      <div class="text-secondary text-end mt-4"><%= k.created_at.strftime('%Y/%m/%d %H:%M') %></div>
    </div>
  <% end %>
<% end %>